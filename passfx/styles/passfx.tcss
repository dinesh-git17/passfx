    color: #94a3b8;
    text-align: center;
    padding: 0 0 1 0;
}

/* ═══════════════════════════════════════════════════════════════════════════════
   VIEW NOTE MODAL - ENCRYPTED DATA SHARD VISUALIZATION
   Theme: Amber (#f59e0b) for Archived Data Display
   ═══════════════════════════════════════════════════════════════════════════════ */

#note-modal {
    width: 100;
    height: auto;
    align: center middle;
}

#physical-note-card {
    width: 96;
    height: auto;
    background: #0a0e27;
    padding: 0;
    margin: 0;
    border: none;
}

#physical-note-card Static {
    width: 96;
    height: 1;
    background: #0a0e27;
    padding: 0;
}

/* Button container - styled with matching amber borders */
#note-modal-buttons {
    width: 96;
    height: 3;
    background: #0a0e27;
    align: center middle;
    padding: 0;
    border-left: outer #f59e0b;
    border-right: outer #f59e0b;
    border-bottom: outer #f59e0b;
}

#note-modal-buttons Button {
    width: auto;
    min-width: 12;
    height: 1;
    margin: 0 1;
    padding: 0 2;
    border: none;
    text-style: bold;
}

#note-modal-buttons #copy-button {
    background: #78350f;
    color: #fbbf24;
}

#note-modal-buttons #copy-button:hover {
    background: #fbbf24;
    color: #0f172a;
}

#note-modal-buttons #copy-button:focus {
    background: #92400e;
    color: #fbbf24;
}

#note-modal-buttons #close-button {
    background: #1e293b;
    color: #94a3b8;
}

#note-modal-buttons #close-button:hover {
    background: #94a3b8;
    color: #0f172a;
}

#note-modal-buttons #close-button:focus {
    background: #334155;
    color: #94a3b8;
}

/* ═══════════════════════════════════════════════════════════════════════════════
   SYSTEM TERMINAL - INTERACTIVE CLI WIDGET
   Theme: Purple/Violet (#8b5cf6) for System Commands
   ═══════════════════════════════════════════════════════════════════════════════ */

/* Terminal Container - constrained to fit log-panel */
#system-terminal {
    width: 1fr;
    max-width: 100%;
    height: 100%;
    background: transparent;
    padding: 0;
    overflow: hidden;
}

/* Terminal Output - RichLog for command history */
#terminal-output {
    width: 1fr;
    max-width: 100%;
    height: 1fr;
    background: #000000;
    color: $pfx-fg;
    border: none;
    padding: 0;
    overflow-x: hidden;
    overflow-y: auto;
}

#terminal-output:focus {
    border: none;
}

/* Terminal Input Row - Command entry line */
#terminal-input-row {
    width: 1fr;
    max-width: 100%;
    height: 1;
    background: #000000;
    align: left middle;
    padding: 0;
    dock: bottom;
}

/* Terminal Prompt - Arrow indicator */
.terminal-prompt,
#terminal-prompt {
    width: auto;
    height: 1;
    color: $pfx-success;
    text-style: bold;
    background: transparent;
    padding: 0;
}

/* Terminal Input - Command text entry (terminal style) */
#terminal-input {
    width: 1fr;
    height: 1;
    background: transparent;
    border: none;
    padding: 0;
    margin: 0;
    color: $pfx-fg;
}

#terminal-input:focus {
    border: none;
    background: transparent;
}

#terminal-input > .input--placeholder {
    color: #475569;
}

#terminal-input > .input--cursor {
    background: $pfx-success;
    color: $pfx-bg;
}
